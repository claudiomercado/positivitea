<%- include('../partials/head') %> 
<body>
    <header>
        <%- include('../partials/header')  %>
    </header>
    <main>
       
<!--         <div class="productos_slider">
            <h1>Slider de Productos</h1>
        </div> -->
        
        <h1>Productos</h1>
        <!--
        <div class="productos_nav">
            <a href="#" class="productos_nav_items">Más Vendidos</a>
            <a href="#" class="productos_nav_items">Categorías</a>
            <a href="#" class="productos_nav_items">Ofertas</a>
        </div>-->
        <div class="productos_random">
            <h3>¿No sabés qué comprar?</h3>
            <% let aleatorio=Math.floor(Math.random()*(8-1+1)+1) %>
            
            <div class="productos_slider_random">
                
                <article class="productos_articulo_random">
                    <% product.forEach(function(producto) {%>
                    <% if(aleatorio==producto.id){%>
                    <img width="100%" src=<%= producto.img%> alt="">
                    <div class="articulo-contenido">
                        <div class="articulo-venta">
                            <p class="precio">$<%= producto.price%>  - <i class="fa-solid fa-cart-shopping"></i></p>
                        </div>
                        <h4 class="description"><%= producto.name%></h4>
                    </div>
                    <% } %>
                    <%});%>
                </article>
                
            </div>
            
            <button class="descubri">Descubrí</button>
        </div>
        <div class="productos_container">
            <h1>Productos Recomendados</h1>
            
            <section class="destacados">
                 <% product.forEach(function(producto) {%>
                    <div>
                            <% if(producto.id_category == 1){%>
                                <article>
                        <img width="100%" src=<%= producto.img%> alt="">
                        <div class="articulo-contenido">
                            <div class="articulo-venta">
                                <p class="precio">$ <%= producto.price  %>  - <i class="fa-solid fa-cart-shopping"></i></p>
                            </div>
                            <h4 class="description"><%= producto.name  %></h4>
                            <form action="/products/productDetail/<%= producto.id%>">
                            <button class="ver_mas" >Ver más</button>
                        </form>
                        </div>
                    </article>
                        <% } %>
                        
                    
                </div>
                <%});%>
            </section>
            
            <h1>Ofertas</h1>
            
            <section class="destacados">
                <% product.forEach(function(producto) {%>
                    <div>
                            <% if(producto.id_category == 2){%>
                                <article>
                        <img width="100%" src=<%= producto.img%> alt="">
                        <div class="articulo-contenido">
                            <div class="articulo-venta">
                                <p class="precio">$ <%= producto.price  %>  - <i class="fa-solid fa-cart-shopping"></i></p>
                            </div>
                            <h4 class="description"><%= producto.name  %></h4>
                            
                                <a href="/products/productDetail/<%= producto.id%>" class="ver_mas">Ver más</a>
                               <!-- <form action="/products/productDetail/">
                            </form>-->
                        </div>
                    </article>
                <% } %>
            </div>
            
            <%});%>
        </section>
        </div>
    </main>
    <footer>
        <%- include('../partials/footer'); %>
    </footer>
</body>
</html>